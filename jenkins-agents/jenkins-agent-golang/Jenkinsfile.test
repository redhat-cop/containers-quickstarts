pipeline {
    agent {
      label 'jenkins-agent-golang'
    }

    stages {
        stage ('Run Clone Test') {
            steps {
                sh "git clone https://github.com/redhat-cop/containers-quickstarts.git"
            }
        }

        stage ('Run Test') {
            steps {
              sh """
                  go version
                  sonar-scanner -v
              """
            }
        }
    }
}
