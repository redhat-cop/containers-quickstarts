pipeline {
    agent {
        label 'jenkins-agent-ansible'
    }

    stages {
        stage ('Run Clone Test') {
            steps {
                sh "git clone https://github.com/redhat-cop/containers-quickstarts.git"
            }
        }

        stage ('Run Test') {
            steps {
                sh """
                    ansible --version
                    molecule --version
                    java -version
                """
            }
        }
    }
}
