{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "annotations": {
            "description": "Kafka Deployment and Runtime Components",
            "iconClass": "icon-java",
            "tags": "java,kafka"
        },
        "name": "kafka"
    },
    "labels": {
        "template": "kafka"
    },
    "parameters": [
        {
            "description": "The name for the application.",
            "name": "APPLICATION_NAME",
            "value": "kafka",
            "required": true
        },
        {
            "description": "Kafka ImageStream Tag",
            "name": "KAFKA_IMAGESTREAMTAG",
            "value": "",
            "required": true
        },
        {
            "description": "Host Name for Zookeeper",
            "name": "ZOOKEEPER_HOST",
            "value": "zookeeper",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-headless",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 9092,
                        "targetPort": 9092
                    }
                ],
                "selector": {
                    "application": "${APPLICATION_NAME}"
                },
                "portalIP": "None",
                "clusterIP": "None",
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 9092,
                        "targetPort": 9092
                    }
                ],
                "selector": {
                    "application": "${APPLICATION_NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "PetSet",
            "apiVersion": "apps/v1alpha1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "replicas": 3,
                "selector": {
                    "matchLabels": {
                        "application": "${APPLICATION_NAME}"
                    }
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "application": "${APPLICATION_NAME}"
                        },
                        "annotations": {
                            "pod.alpha.kubernetes.io/initialized": "true"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APPLICATION_NAME}",
                                "image": "${KAFKA_IMAGESTREAMTAG}",
                                "command": [
                                    "sh",
                                    "-c",
                                    "bin/kafka-server-start.sh config/server.properties --override zookeeper.connect=$ZOOKEEPER_HOST --override advertised.host.name=$KAFKA_ADVERTISED_HOST_NAME --override broker.id=$(hostname | awk -F'-' '{print $2}')"
                                ],
                                "ports": [
                                    {
                                        "containerPort": 9092,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "KAFKA_ADVERTISED_HOST_NAME",
                                        "valueFrom": {
                                            "fieldRef": {
                                                "apiVersion": "v1",
                                                "fieldPath": "status.podIP"
                                            }
                                        }
                                    },
                                    {
                                        "name": "ZOOKEEPER_HOST",
                                        "value": "${ZOOKEEPER_HOST}"
                                    }
                                ],
                                "resources": {
                                    "requests": {
                                        "cpu": "256m",
                                        "memory": "256Mi"
                                    }
                                },
                                "volumeMounts": [
                                    {
                                        "name": "datadir",
                                        "mountPath": "/opt/kafka/data"
                                    }
                                ],
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                },
                "volumeClaimTemplates": [
                    {
                        "metadata": {
                            "name": "datadir",
                            "labels": {
                                "application": "${APPLICATION_NAME}"
                            }
                        },
                        "spec": {
                            "accessModes": [
                                "ReadWriteOnce"
                            ],
                            "resources": {
                                "requests": {
                                    "storage": "100Mi"
                                }
                            }
                        }
                    }
                ],
                "serviceName": "${APPLICATION_NAME}-headless"
            }
        }
    ]
}